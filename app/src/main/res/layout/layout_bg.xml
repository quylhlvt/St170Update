<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearChooseBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:weightSum="360"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <FrameLayout
                android:id="@id/chooseImageBG"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="220"
                android:background="@drawable/img_bg_imgbg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="2.2:0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/app_color"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:text="@string/image" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/chooseColorBG"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:layout_weight="140"
                android:background="@drawable/img_bg_imgcolor"
                app:layout_constraintBottom_toBottomOf="@id/chooseImageBG"
                app:layout_constraintDimensionRatio="1.4:0.32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chooseImageBG">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/img_choose_bgsmall" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/_808080"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:text="@string/color" />
            </FrameLayout>

            <FrameLayout
                android:visibility="gone"
                android:id="@id/chooseImageBG2"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="140"
                android:layout_gravity="bottom"
                android:background="@drawable/img_bg_imgcolor2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1.4:0.32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/img_choose_colorsmall" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/_808080"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:text="@string/image" />
            </FrameLayout>

            <FrameLayout
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:id="@+id/chooseColorBG2"
                android:layout_height="48dp"
                android:layout_weight="220"
                android:background="@drawable/img_bg_imgbg"

                app:layout_constraintDimensionRatio="2.2:0.48"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chooseImageBG2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/app_color"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:text="@string/color" />
            </FrameLayout>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvImage"
            android:background="@drawable/img_frame_bg_layer_bg"
            app:layout_constraintTop_toBottomOf="@+id/linearChooseBg"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="8dp"
            android:paddingTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:itemCount="10"
            android:visibility="visible"
            tools:listitem="@layout/item_image"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="5"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/img_frame_bg_layer_bg"
            app:layout_constraintTop_toBottomOf="@+id/linearChooseBg"
            android:paddingHorizontal="8dp"
            android:paddingTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:itemCount="10"
            android:visibility="gone"
            tools:listitem="@layout/item_color_bg"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>