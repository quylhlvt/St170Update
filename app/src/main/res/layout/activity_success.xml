<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color4">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:elevation="1dp"
            android:src="@drawable/ic_back2_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvHome"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:src="@drawable/imv_home"
            app:layout_constraintBottom_toBottomOf="@id/imvBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imvBack"

            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvShare"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/imv_share"
            app:layout_constraintBottom_toBottomOf="@id/imvBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imvBack" />

<!--        <androidx.appcompat.widget.AppCompatImageView-->
<!--            android:id="@+id/imvShare"-->
<!--            android:layout_width="32dp"-->
<!--            android:layout_height="32dp"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            android:src="@drawable/imv_share"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/imvBack"-->
<!--            app:layout_constraintEnd_toStartOf="@id/imvHome"-->
<!--            app:layout_constraintTop_toTopOf="@id/imvBack" />-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImv"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imvBack"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            android:layout_width="0dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/londrina_solid_regular"
            android:gravity="center"
            android:text="@string/image_has_been_saved_successfully"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/cardImv" />

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContent">

            <LinearLayout
                android:id="@+id/btnMyWork"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_share_view"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <!--                <ImageView-->
                <!--                    android:layout_width="24dp"-->
                <!--                    android:layout_height="24dp"-->
                <!--                    android:src="@drawable/ic_mywork_success" />-->

                <TextView
                    android:id="@+id/tvMyWork"
                    style="@style/single_marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/go_to_my_creation"
                    android:textColor="@color/app_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnDownload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_share_view"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <!--                <ImageView-->
                <!--                    android:layout_width="24dp"-->
                <!--                    android:layout_height="24dp"-->
                <!--                    android:src="@drawable/ic_download_mywork" />-->

                <TextView
                    android:id="@+id/tvDownload"
                    style="@style/single_marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:marqueeRepeatLimit="3"
                    android:singleLine="true"
                    android:text="@string/download"
                    android:textColor="@color/app_color"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        <!--    flNativeCollab-->
        <FrameLayout
            android:id="@+id/flNativeCollab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <include layout="@layout/ads_shimmer_collap_native" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>