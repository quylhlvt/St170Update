<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg_splash">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:elevation="1dp"
            android:src="@drawable/ic_back_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.dragon.tribe.fire.oc.maker.utils.StrokeAppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:ellipsize="marquee"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/app_color"
            android:fontFamily="@font/cherry_bomb_one_regular"
            android:gravity="center"
            android:marqueeRepeatLimit="3"
            android:singleLine="true"
            android:text="@string/successfully"

            app:layout_constraintBottom_toBottomOf="@id/imvBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imvBack"

            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvHome"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/imv_home"
            app:layout_constraintBottom_toBottomOf="@id/imvBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imvBack" />

<!--        <androidx.appcompat.widget.AppCompatImageView-->
<!--            android:id="@+id/imvShare"-->
<!--            android:layout_width="32dp"-->
<!--            android:layout_height="32dp"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            android:src="@drawable/imv_share"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/imvBack"-->
<!--            app:layout_constraintEnd_toStartOf="@id/imvHome"-->
<!--            app:layout_constraintTop_toTopOf="@id/imvBack" />-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImv"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tvContent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="46dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imvBack"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            android:layout_width="0dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold_italic"
            android:gravity="center"
            android:layout_marginTop="13dp"
            android:text="@string/image_has_been_saved_successfully"
            android:textColor="@color/app_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/llBottom" />

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imvShare">

            <LinearLayout
                android:id="@+id/btnMyWork"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:paddingHorizontal="12dp"
                android:background="@drawable/bg_btn_share_view"
                android:gravity="center"
                android:orientation="horizontal">

<!--                <ImageView-->
<!--                    android:layout_width="24dp"-->
<!--                    android:layout_height="24dp"-->
<!--                    android:src="@drawable/ic_mywork_success" />-->

                <TextView
                    android:id="@+id/tvMyWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/nunito_medium"
                    android:text="@string/my_creation"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    style="@style/single_marquee"
                    android:freezesText="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnDownload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_share_view"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:orientation="horizontal">

<!--                <ImageView-->
<!--                    android:layout_width="24dp"-->
<!--                    android:layout_height="24dp"-->
<!--                    android:src="@drawable/ic_download_mywork" />-->

                <TextView
                    android:id="@+id/tvDownload"
                    style="@style/single_marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/nunito_medium"
                    android:marqueeRepeatLimit="3"
                    android:singleLine="true"
                    android:text="@string/download"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/imvShare"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:background="@drawable/bg_share_success"
            android:fontFamily="@font/nunito_medium"
            android:gravity="center"
            android:text="@string/share"
            android:layout_marginBottom="150dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/llBottom"
            app:layout_constraintStart_toStartOf="@+id/llBottom" />
        <!--    flNativeCollab-->
        <FrameLayout
            android:id="@+id/flNativeCollab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <include layout="@layout/ads_shimmer_collap_native" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>