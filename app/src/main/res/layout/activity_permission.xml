<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg_splash">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/titlePermission"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/app_color"
            app:strokeJoinStyle="miter"
            app:strokeMiter="5dp"
            app:strokeWidth="2dp"
            style="@style/single_marquee"
            android:fontFamily="@font/londrina_solid_regular"
            android:gravity="center"
            android:paddingVertical="2dp"
            android:text="@string/permission"
            android:textColor="@color/white"
            android:textSize="24sp"
            />


        <ScrollView
            android:id="@+id/sv"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@+id/titlePermission">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_12_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl3">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:gravity="center"
                        android:text="@string/storage"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/swiVibrate2"
                        android:layout_width="56dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginVertical="10dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/switch_off" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_12_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl3">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:gravity="center"
                        android:text="@string/notifications"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/swiVibrate4"
                        android:layout_width="56dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginVertical="10dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/switch_off" />
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
        <ImageView
            android:id="@+id/imgPer"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:src="@drawable/img_per"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toTopOf="@+id/native_ads"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sv" />


        <ImageView
            android:id="@+id/imgTxtper"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="-42dp"
            android:scaleType="fitXY"
            android:src="@drawable/think_permission"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgPer" />

        <LinearLayout
            android:id="@+id/txtPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="66dp"
            android:layout_marginTop="12dp"
            android:gravity="center"

            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/imgTxtper"
            app:layout_constraintStart_toStartOf="@+id/imgTxtper"
            app:layout_constraintTop_toTopOf="@+id/imgTxtper">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:fontFamily="@font/londrina_solid_regular"
                android:textSize="16sp"
                android:textColor="#9F9F9F"
                />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/native_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/fragEnd"
            app:layout_constraintStart_toStartOf="parent">

            <include layout="@layout/ads_shimmer_avg2" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fragEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/btnContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="@font/londrina_solid_regular"
                android:padding="8dp"
                android:text="@string/continue2"
                android:textColor="@color/app_color"
                android:textSize="20sp" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
