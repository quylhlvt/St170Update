        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:visibility="visible"
            android:elevation="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@+id/btnSave">

            <!--            <androidx.appcompat.widget.AppCompatImageView-->
            <!--                android:id="@+id/body"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent" />-->

        </RelativeLayout>



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnDice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="1dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/imv_random"
            app:layout_constraintBottom_toBottomOf="@id/llColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/llColor" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvShowColor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="1dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/imv_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl" />

        <LinearLayout
            android:elevation="1dp"
            android:id="@+id/llColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:gravity="start"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/imvShowColor"
            app:layout_constraintEnd_toStartOf="@id/btnDice"
            app:layout_constraintStart_toEndOf="@id/imvShowColor"
            app:layout_constraintTop_toTopOf="@id/imvShowColor">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_8_color"
                android:orientation="vertical"
                app:cardCornerRadius="14dp"
                app:strokeColor="#4C5AF2"
                app:strokeWidth="0.5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="8dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="10"
                        tools:listitem="@layout/item_color" />
                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llPart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_frame_bg_layer_custom"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/llNav"
            app:layout_constraintTop_toBottomOf="@id/btnDice">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvPart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="5"
                tools:itemCount="20"
                tools:listitem="@layout/item_part" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNav"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_nav_custom"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="10"
                tools:listitem="@layout/item_navigation" />
        </LinearLayout>

        <LinearLayout
            android:elevation="4dp"
            android:visibility="gone"
            android:id="@+id/llLoading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#A0949494"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80545454"
                android:weightSum="800"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_weight="155"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="22dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/bg_dialog"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <FrameLayout
                        android:id="@+id/titleFame"
                        android:layout_width="0dp"
                        android:layout_height="41dp"
                        android:background="@drawable/bg_title_dialog"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:elevation="1dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            style="@style/single_marquee"
                            app:strokeJoinStyle="miter"
                            android:id="@+id/txtTitle"
                            android:gravity="center"
                            android:layout_marginHorizontal="0dp"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/loading"/>

                    </FrameLayout>
                    <TextView
                        android:id="@+id/txtContent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center"
                        android:text="@string/wait_a_few_second"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/btnNo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/titleFame" />

                    <!--                       -->
                    <!--                        <com.airbnb.lottie.LottieAnimationView-->
                    <!--                            android:id="@+id/animationView"-->
                    <!--                            android:layout_width="100dp"-->
                    <!--                            android:layout_height="100dp"-->
