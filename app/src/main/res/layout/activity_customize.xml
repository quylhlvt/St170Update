                    <!--                            app:layout_constraintTop_toBottomOf="@+id/txtContent"-->
                    <!--                            app:lottie_autoPlay="true"-->
                    <!--                            app:lottie_loop="true"-->
                    <!--                            app:lottie_rawRes="@raw/json_loading" />-->

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/btnNo"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/bg_8_color"
                        android:gravity="center"
                        android:text="@string/no"
                        android:textColor="@color/app_color"
                        android:fontFamily="@font/nunito_regular"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1.01:0.36"
                        app:layout_constraintEnd_toStartOf="@+id/btnYes"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtContent" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/btnYes"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_btn_loading_yes"
                        android:gravity="center"
                        android:text="@string/tv_yes"
                        android:textColor="@color/white"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/nunito_regular"
                        app:layout_constraintDimensionRatio="1.01:0.36"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btnNo"
                        app:layout_constraintTop_toTopOf="@+id/btnNo" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </LinearLayout>
        <!--    flNativeCollab-->
        <FrameLayout
            android:id="@+id/flNativeCollab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
