<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ✅ Layer 1: Viền gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#7EFEFD"
                android:endColor="#F5A8F6"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- ✅ Layer 2: Trong suốt hoàn toàn -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <!--            <solid android:color="@color/white" />  &lt;!&ndash; ✅ Transparent &ndash;&gt;-->
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>